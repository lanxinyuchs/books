<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
  
  <xs:element name="hwBaseline" type="HwBaselineType"/>

  <xs:complexType name="HwBaselineType">
    <xs:sequence>
      <xs:element name="boardLists" type="BoardListsType" 
		  minOccurs="0" maxOccurs="1"/>
    </xs:sequence>
    <xs:attribute name="docNo" type="xs:string" use="required" />
    <xs:attribute name="rev" type="xs:string" use="required" />
    <xs:attribute name="date" type="DateType" use="required" />
  </xs:complexType>

  <xs:simpleType name="DateType">
    <xs:restriction base="xs:string">
      <xs:pattern value="([0-9]{4})-(1[0-2]|0[1-9])-(0[1-9]|[1|2][0-9]|3[0-1])" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="BoardListsType">
    <xs:sequence>
      <xs:element name="boardList" type="BoardListType" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="BoardListType">
    <xs:sequence>
      <xs:element name="boardType" type="BoardTypeType" minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="hwcategory" type="xs:string" use="required" />
    <xs:attribute name="hwmodel" type="xs:string" use="required" />
  </xs:complexType>

  <xs:complexType name="BoardTypeType">
    <xs:attribute name="productNumber" type="xs:string" use="required" />
    <xs:attribute name="revision" type="xs:string" use="required" />
  </xs:complexType>

</xs:schema>
