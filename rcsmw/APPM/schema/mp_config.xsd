<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
  <xs:element name="config">
    <xs:complexType>
      <xs:sequence>
        <xs:element minOccurs="0" maxOccurs="unbounded" ref="env"/>
      </xs:sequence>
      <xs:attribute name="escalation" type="xs:string"/>
      <xs:attribute name="maxMem" type="xs:integer"/>
      <xs:attribute name="maxRestarts"  type="xs:integer"/>
      <xs:attribute name="maxTime" type="xs:integer"/>
      <xs:attribute name="netAdmin" type="xs:boolean"/>
      <xs:attribute name="sysAdmin" type="xs:boolean"/>
      <xs:attribute name="rtCap" type="xs:boolean"/>
      <xs:attribute name="softRt" type="xs:boolean"/>
      <xs:attribute name="tmpSize" type="xs:integer"/>
    </xs:complexType>
  </xs:element>
  <xs:element name="env">
    <xs:complexType>
      <xs:attribute name="value" use="required"  type="xs:string"/>
      <xs:attribute name="var" use="required" type="xs:string"/>
    </xs:complexType>
  </xs:element>
</xs:schema>
