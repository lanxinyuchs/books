APP = bld.rcsErlApp("cec", cxaid="", cxcid="131", appdataroot="cec", )

bld.shlib(
   source=["csrc/cec.c", "csrc/cec_trace_probe.c"],
   target="cec",
   name="cec",
   includes="csrc",
   use = ["ltt"],
   install_path = bld.getLib(APP)
   )
bld.install_files(bld.getPrv(APP)+"/appdata", ['appdata/cec_lmhi_sim.xml',
   'appdata/cec_lmhi_vrcs.xml','appdata/cec_lmhi_vrcs64.xml','appdata/cec_lmhi_arm.xml'])
