<appdata target="coli_reg">
<!-- ========================================================== -->
  <coli_external_reg
     cli_name = "timeout"
     cli_path = "/cli/"
     cli_scope = "central"
     usage = "Change COM CLI idle timeout"
     relpath = "*/comte*/priv/bin/cli_idle_timeout"
     >
    <description>
This command changes the COM CLI idle timeout in seconds. 0 = inifinity.
    </description>
  </coli_external_reg>
<!-- ========================================================== -->
  <coli_external_reg
     cli_name = "loglevel"
     cli_path = "/com/"
     cli_scope = "central"
     usage = "Change COM logging level"
     relpath = "*/comte*/priv/bin/log_level"
     >
    <description>
This command changes the COM logging level. 
Default is 3.
0 Emergency 
1 Alert 
2 Critical 
3 Error
4 Warning
5 Notice
6 Info
7 Debug
8 Trace
    </description>
  </coli_external_reg>
<!-- ========================================================== -->
  <coli_external_reg
     cli_name = "version"
     cli_path = "/com/"
     cli_scope = "central"
     usage = "Print COM version"
     relpath = "*/comte*/priv/bin/com_version"
     >
    <description>
This command prints the COM version.
    </description>
  </coli_external_reg>
</appdata>

