<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="appdata" type="RcsDataType"/>

  <xs:complexType name="RcsDataType">
    <xs:sequence>
      <xs:element name="coli_authorization" type="AuthType"
		  minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="target" type="AuthTargetType" use="required" />
  </xs:complexType>

  <xs:simpleType name="AuthTargetType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="coli_auth" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="AuthType">
    <xs:attribute name="cli_name" type="xs:string" use="required" />
    <xs:attribute name="cli_path" type="xs:string" use="required" />
    <xs:attribute name="authorization" type="AuthorizationEnum" use="required" />
  </xs:complexType>

  <xs:simpleType name="AuthorizationEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="basic" />
      <xs:enumeration value="expert" />
      <xs:enumeration value="advanced" />
      <xs:enumeration value="BasebandSupportBasic" />
      <xs:enumeration value="BasebandSupportExpert" />
      <xs:enumeration value="BasebandSupportAdvanced" />
    </xs:restriction>
  </xs:simpleType>
</xs:schema>
