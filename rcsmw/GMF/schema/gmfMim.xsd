<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="appdata" type="RcsDataType"/>

  <xs:complexType name="RcsDataType">
    <xs:sequence>
      <xs:element name="mimInfos" type="MimInfos"
                  minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="target" use="required" type="GmfMimTargetType"/>
  </xs:complexType>

  <xs:simpleType name="GmfMimTargetType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="gmfMim"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="MimInfos">
    <xs:sequence>
      <xs:element name="mimInfo" type="MimInfo"
                  minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="MimInfo">
    <xs:sequence>
      <xs:element name="registerOnNodes" type="RegisterOnNodes"
                  minOccurs="0" maxOccurs="1"/>
    </xs:sequence>
    <xs:attribute name="ifType" use="required" type="IfType"/>
    <xs:attribute name="file" use="required" type="xs:NCName"/>
    <xs:attribute name="path" use="required" type="xs:string"/>
    <xs:attribute name="nbiFile" use="optional" type="xs:NCName" />
  </xs:complexType>

  <xs:simpleType name="IfType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="erl"/>
      <xs:enumeration value="imm"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="RegisterOnNodes">
    <xs:sequence>
      <xs:element name="node" type="Node" 
                  minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="Node">
    <xs:attribute name="type" use="required" type="NodeType"/>
  </xs:complexType>

  <xs:simpleType name="NodeType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="ALL" />
      <xs:enumeration value="BPU" />
      <xs:enumeration value="RadioNode" />
      <xs:enumeration value="RadioTNode" />
      <xs:enumeration value="RnNode" />
      <xs:enumeration value="RCP-SIM" />   <!-- Deprecated -->
      <xs:enumeration value="RCS-DUS2" />   <!-- Deprecated -->
      <xs:enumeration value="RCS-T" />   <!-- Deprecated -->
      <xs:enumeration value="R-VNFM" />
      <xs:enumeration value="vPP" />
      <xs:enumeration value="vRC" />
      <xs:enumeration value="vSD" />
      <xs:enumeration value="VtfRadioNode" />
      <xs:enumeration value="5GRadioNode" />
    </xs:restriction>
  </xs:simpleType>

</xs:schema>
