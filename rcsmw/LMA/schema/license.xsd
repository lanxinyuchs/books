<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="appdata" type="RcsDataType"/>

  <xs:complexType name="RcsDataType">
    <xs:sequence>
      <xs:element name="featurelicense" type="FeatureLicenseType"
		  minOccurs="1" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="target" type="LicenseTargetType" use="required"/>
  </xs:complexType>

  <xs:simpleType name="LicenseTargetType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="license" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="FeatureLicenseType">
    <xs:attribute name="keyId" type="xs:string"/>
  </xs:complexType>

</xs:schema>
