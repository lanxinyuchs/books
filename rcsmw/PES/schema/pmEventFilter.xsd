<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">

  <xs:element name="appdata" type="RcsPmefType"/>

  <xs:complexType name="RcsPmefType">
    <xs:sequence>
      <xs:element name="eventFilter" type="EventFilterType"
		  minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="target" type="TargetType" use="required"/>
  </xs:complexType>


  <xs:simpleType name="TargetType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="pmEventFilter" />
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="EventFilterType">
    <xs:sequence>
      <xs:element name="eventFilterTypeId"  type="xs:string"
		  minOccurs="1" maxOccurs="1" />
      <xs:element name="description"   type="xs:string"
		  minOccurs="0" maxOccurs="1" />
      <xs:element name="defaultValue"   type="xs:string"
		  minOccurs="0" maxOccurs="1" />
      <xs:element name="filterMethod"       type="FilterMethod"
		  minOccurs="0" maxOccurs="1" />
      <xs:element name="valueSpec"   type="xs:string"
		  minOccurs="0" maxOccurs="1" />
      <xs:element name="eventProducer" type="xs:string"
		  minOccurs="1" maxOccurs="1" />
    </xs:sequence>
  </xs:complexType>



  <xs:simpleType name="FilterMethod">
    <xs:restriction base="xs:string">
      <xs:enumeration value="SINGLE_SELECT" />
      <xs:enumeration value="MULTI_SELECT" />
      <xs:enumeration value="INTERVAL" />
      <xs:enumeration value="DISTINGUISHED_NAMES" />
      <xs:enumeration value="REGEXP" />
    </xs:restriction>
  </xs:simpleType>
</xs:schema>
