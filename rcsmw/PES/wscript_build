APP = bld.rcsErlApp("pes", ["model"], cxaid="198", cxcid="131", appdataroot="pes", )

bld.shlib(source=bld.path.ant_glob("csrc/*.c"), target="pei",
   name = "pei",
   includes="csrc",
   install_path = bld.getLib(APP))


bld.install_files(bld.getBldLib("pes"), ['libpei.so'])
bld.install_files("${PREFIX}/"+APP+"/priv", bld.path.ant_glob("appdata/*"), relative_trick=True)
