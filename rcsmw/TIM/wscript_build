APP = bld.rcsErlApp("tim", ["model"], cxaid="203", cxcid="131", appdataroot="tim", )

bld.shlib(
   source="csrc/cello_tzii.c",
   includes="csrc/",
   target="tzii",
   use=["lits", "tri", "cec"],
   install_path = bld.getLib(APP)
)
bld.install_files(bld.getBldLib("tim"), 'libtzii.so')
bld.install_files("${PREFIX}/"+APP+"/priv", bld.path.ant_glob("appdata/*"), relative_trick=True)

