#  Select path depending on OS flavour
if { [file exists /etc/redhat-release]} {
    set top /proj/5G_rcs/3pp/OTP/RHEL-OTP-19.1.3-native-2
} else {
    set top /proj/5G_rcs/3pp/OTP/OTP-19.1.3-native-1
}

# 
if { [file exists [glob $top/lib/erlang/lib/erl_interface-*]]} {
    set erlinterface [glob $top/lib/erlang/lib/erl_interface-*]
} else {
    set erlinterface [glob $top/lib/erl_interface-*]
}

prepend-path PATH	$top/bin:$erlinterface/bin
append-path MANPATH    	$top/man

setenv OTP_ROOT 	$top
setenv OTP		$top/lib/erlang

# Needed for "crypt" functions in "erlc", ...
module load openssl/1.0.0

