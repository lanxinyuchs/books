<?xml version="1.0"?>
<!-- This pgh-cfg.xml has been modified for the purpose of running LMBench       --> 
<!-- I.e all LateInit Tasks have been removed and also rcs-appdumt in EarlyInit  --> 
<Phase><EarlyInit>
        <Task>
                <Location>/etc/pgh/S02sysfs.sh</Location>
                <Arguments>start</Arguments>
                <WaitForCompletion/>
        </Task>
        <Task>
                <Location>/etc/pgh/S03mountall.sh</Location>
                <Dependency>/etc/pgh/S02sysfs.sh</Dependency>
                <Arguments>start</Arguments>
                <WaitForCompletion/>
        </Task>
        <Task>
                <Location>/etc/pgh/S06alignment.sh</Location>
                <Dependency>/etc/pgh/S03mountall.sh</Dependency>
                <Arguments>start</Arguments>
                <WaitForCompletion/>
        </Task>
        <Task>
                <Location>/etc/pgh/S38devpts.sh</Location>
                <Dependency>/etc/pgh/S06alignment.sh</Dependency>
                <Arguments>start</Arguments>
                <WaitForCompletion/>
        </Task>
        <Task>
                <Location>rsyslogd</Location>
                <Type>RCS_SYSLOGD</Type>
                <Dependency>/etc/pgh/S38devpts.sh</Dependency>
                <PidFile>/var/run/rsyslogd.pid</PidFile>
                <WaitForCompletion/>
        </Task>
        <Task>
                <Location>/etc/pgh/rcs-bootmisc.sh</Location>
                <Arguments>start</Arguments>
                <Dependency>rsyslogd</Dependency>
                <WaitForCompletion/>
        </Task>
        <Task>
                <Location>/etc/pgh/S50modules.sh</Location>
                <Dependency>/etc/pgh/rcs-bootmisc.sh</Dependency>
                <Arguments>start</Arguments>
                <WaitForCompletion/>
        </Task>
<!--
        <Task>
                <Location>/etc/init.d/rcs-appdump.sh</Location>
                <Arguments>start</Arguments>
                <Dependency>rsyslogd</Dependency>
                <Type>RCS_APPDUMP</Type>
                <WaitForCompletion/>
        </Task>
-->
        <Task>
                <Location>cim</Location>
                <Restart>10</Restart>
<!--                <Dependency>/etc/init.d/rcs-appdump.sh</Dependency> -->
        </Task>
        <Task>
                <Location>/sbin/sysctl</Location>
                <Arguments>-q -p /etc/sysctl.conf</Arguments>
                <WaitForCompletion/>
        </Task>
        <Task>
                <Location>itcworld</Location>
                <Dependency>rsyslogd</Dependency>
                <Dependency>/sbin/sysctl</Dependency>
        </Task>
        <Task>
                <Location>/etc/pgh/lmt_networking.sh</Location>
                <Dependency>rsyslogd</Dependency>
                <WaitForCompletion/>
        </Task>
        <Task>
                <Location>/etc/pgh/sshd.sh</Location>
                <Dependency>/etc/pgh/lmt_networking.sh</Dependency>
                <WaitForCompletion/>
        </Task>
        <Task>
                <Location>/etc/pgh/rcs-patch-mode-warning.sh</Location>
                <Dependency>/etc/pgh/sshd.sh</Dependency>
                <WaitForCompletion/>
        </Task>
</EarlyInit>
	<EarlyInitSync>
               <Task>
                        <Location>/etc/init.d/lttng.sh</Location>
                        <UGroup>tracing</UGroup>
                        <Arguments>start</Arguments>
                        <WaitForCompletion/>
                </Task>
                <Task>
                        <Location>rhsd</Location>
                        <Environment>CXP_NO=CXP9025851/3</Environment>
			<Environment>RHSD_NPU_FW=/lib/firmware/adk-npu.cfg</Environment>
			<Environment>RHSD_ICM_FW=/lib/firmware/icm-core.img</Environment>
			<Environment>RHSD_ICM_IO_FW=/lib/firmware/icm-io.img</Environment>
			<Environment>RHSD_TIMESTAMP_0=/opt/rcs_ee/ntp/timestamp.0</Environment>
			<Environment>RHSD_TIMESTAMP_1=/opt/rcs_ee/ntp/timestamp.1</Environment>
			<Environment>RHAIDIR=/opt/rcs_ee/fallback/rhsd</Environment>
			<Environment>EE_MODE=normal</Environment>
			<WarmAction>PERFORM</WarmAction>
			<WaitForCompletion>PGMIF</WaitForCompletion>
                </Task>
